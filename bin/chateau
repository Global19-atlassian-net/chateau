#!/usr/bin/env node

var argv = require('optimist').argv,
    path = require('path');

if (argv.h || argv.help) {
    console.log([
    "usage: chateau [options]",
    "",
    "options:",
    "  -f [config_file]   Default file: config.js",
    "  -h                 Shows this help",
    ].join('\n'));
    process.exit();
}

var configFile = path.resolve(argv.f || 'config.js');

chateau = require('../app.js')(configFile);
